# -*- compile-command: "bjam" -*-

project multi-methods/doc ;
import boostbook : boostbook ;
using quickbook ;
using doxygen ;

path-constant images_location : html ;

boostbook quickbook
    :
        multi-methods.qbk
    :
        <xsl:param>chunk.first.sections=1
        <xsl:param>toc.section.depth=3
        <xsl:param>toc.max.depth=2
        #<xsl:param>nav.layout=none
        <xsl:param>boost.defaults=none
        <dependency>reference
    ;
    
doxygen reference
  :
    [ glob ../include/*.hpp ]
  :
    <doxygen:param>HIDE_UNDOC_MEMBERS=YES
    <doxygen:param>QUIET=YES
    <doxygen:param>WARN_IF_UNDOCUMENTED=NO
    <doxygen:param>PREDEFINED=DOXYGEN_SHOULD_SKIP_THIS
    <doxygen:param>FULL_PATH_NAMES=NO
#    <doxygen:param>STRIP_FROM_PATH=
    <doxygen:param>EXAMPLE_PATH=../doc
  ;